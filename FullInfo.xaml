<Window x:Class="WpfApp_lab4.FullInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_lab4"
        mc:Ignorable="d"
        Title="FullInfo" Height="491" Width="800">
    <Grid Margin="0,20,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="183*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox_FullInfo" Margin="58,31,58,91" Grid.ColumnSpan="2" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold"/>
        <Label Content="Розширена інформація" HorizontalAlignment="Left" Margin="58,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.642,-0.014" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_edit" Content="Редагувати" HorizontalAlignment="Left" Margin="58,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.439,-0.499" Height="35" Width="138" Click="btn_edit_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_delet" Content="Видалити" HorizontalAlignment="Left" Margin="536,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.511,-0.541" Height="35" Width="138" Grid.Column="1" Click="btn_delet_Click"/>
    </Grid>
</Window>
